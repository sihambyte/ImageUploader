<body>
    <div id="main content">
        <div class="outer_grid-container" id="regContainer">
            <header id="reg_intro">
                <h1>Sign Up</h1>
            </header>
            <form id="model" method="POST" action="/users/register" enctype="application/x-www-form-urlencoded">
                <div class="inner_grid-container">
                    <div class="formCheck">
                        <label for="userName">User Name</label>
                        <input type="text" name="username" id="userName" placeholder="User Name" />
                        <small>Error message</small>
                    </div>
                    <div class="formCheck">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" placeholder="email"  />
                        <small>Error message</small>
                    </div>
                    <div class="formCheck">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" placeholder="password" />
                        <small>Error message</small>
                    </div>
                    <div class="formCheck">
                        <label for="confirmPassword">Confirm password</label>
                        <input type="password" name="confirmPassword" id="confirmPassword" placeholder="password again" />
                        <small>Error message</small>
                    </div>
                </div>
                <br/>
                <input type="checkbox" name="checkAge" class="box1" />
                <label for=" checkAge " class="box1 " id="box1Label ">I confirm that I am 13+ years of age</label>
                <br/>
                <input type="checkbox" name="AcceptRules " class="box2 " />
                <label for="AcceptRules " class="box2 "><a href="# " style="color: #301934">TOS and Privacy Rules</a></label>

                <div class="flex-box">
                    <button type="submit " class="registerButton" id="buttonRegister"> Register</button>
                </div>
            </form>
        </div>
    </div>

</body>